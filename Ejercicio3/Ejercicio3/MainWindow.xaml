<Window x:Name="DirectoriosArchivos" x:Class="Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio3"
        mc:Ignorable="d"
        Title="Directorios y archivos" Height="343" Width="538" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="DirectorioTextBlock" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Directorio:" VerticalAlignment="Bottom" Grid.Row="0"/>
        <ListBox x:Name="DirectorioListBox" HorizontalAlignment="Left" Height="250" Margin="10" VerticalAlignment="Center" Width="500"  Grid.Row="1"/>
    </Grid>
</Window>
